mixin menu__info(text)
    i.fas.fa-th-large
    .text= text

mixin prod__detail(link)
    .wrap-content
        img(src=link)
        .price 1.550.000 Đ
        .name Máy khoan Black Decker
        .vote
            .star
                - var n = 0
                    while n < 4
                        i.fas.fa-star
                        - n++
                i.far.fa-star
            .text (12 Đánh giá)
            .clearfix
        .button
            a(href="")
                button MUA NGAY
            a(href="../file_pug/detail.html")
                button XEM CHI TIẾT 

