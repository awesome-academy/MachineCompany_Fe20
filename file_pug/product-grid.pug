doctype html
head
    // Required meta tags
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    // Bootstrap CSS
    link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.0/css/bootstrap.min.css' integrity='sha384-PDle/QlgIONtM1aqA2Qemk5gPOE7wFq8+Em+G/hmo5Iq0CCmYZLv3fVRDJ4MMwEA' crossorigin='anonymous')
    // Font Awesome CDN
    link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/", crossorigin="anonymous")
    // Link CSS
    link(rel="stylesheet", href="../file_scss/homepage.css")
    title Trang sản phẩm
body
    // Minxin PROD__DETAIL
    mixin prod__detail(link)
        .wrap-content
            img(src=link)
            .price 1.550.000 Đ
            .name Máy khoan Black Decker
            .vote
                .star
                    i.fas.fa-star
                    i.fas.fa-star
                    i.fas.fa-star
                    i.fas.fa-star
                    i.far.fa-star
                .text (12 Đánh giá)
                .clearfix
            .button
                button MUA NGAY
                button XEM CHI TIẾT 

    include _header.pug
    .container
        .breadcrumb
            li.breadcrumb-item
                a(href="") Trang chủ
            i.fas.fa-caret-right
            li.breadcrumb-item.active Danh mục sản phẩm
        .content
            .col-3.content__left
                include _menu-product.pug
            .col-9.content__right
                .content__right__header
                    include _header-product.pug
                .content__right__content
                    .row
                        .col-4.prod__detail
                            +prod__detail('../images/3.jpg') 
                        .col-4.prod__detail
                            +prod__detail('../images/4.jpg') 
                        .col-4.prod__detail
                            +prod__detail('../images/5.jpg')
                    .row
                        .col-4.prod__detail
                            +prod__detail('../images/6.jpg') 
                        .col-4.prod__detail
                            +prod__detail('../images/7.jpg') 
                        .col-4.prod__detail
                            +prod__detail('../images/8.jpg')
                    .row
                        .col-4.prod__detail
                            +prod__detail('../images/10.jpg') 
                        .col-4.prod__detail
                            +prod__detail('../images/9.jpg') 
                        .col-4.prod__detail
                            +prod__detail('../images/6.jpg')
                    .row
                        .col-4.prod__detail
                            +prod__detail('../images/11.jpg') 
                        .col-4.prod__detail
                            +prod__detail('../images/5.jpg') 
                        .col-4.prod__detail
                            +prod__detail('../images/7.jpg')
                    .row
                        .col-4.prod__detail
                            +prod__detail('../images/36.jpg') 
                        .col-4.prod__detail
                            +prod__detail('../images/35.jpg') 
                        .col-4.prod__detail
                            +prod__detail('../images/34.jpg')
                    .row
                        .col-4.prod__detail
                            +prod__detail('../images/36.jpg') 
                        .col-4.prod__detail
                            +prod__detail('../images/35.jpg') 
                        .col-4.prod__detail
                            +prod__detail('../images/34.jpg')
                .content__right__footer
                    include _footer-product.pug 
        .clearfix
    include _footer.pug
    
